
@using GrowIndigo.Utilities.Resources;
@using GrowIndigo.Utilities;
@using GrowIndigo.DAL.DataModels.CommonModels;
@{
    var Projectname = ConfigReader.ProjectName;
    LoginViewModel loggedInUser = Session["LoggedInUser"] != null ? (LoginViewModel)Session["LoggedInUser"] : null;
}


<title>Payment Status </title>

<link href="https://fonts.googleapis.com/css?family=Poppins:200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&display=swap"
      rel="stylesheet">
<script src="@Projectname/Scripts/jquery-3.3.1.min.js"></script>
<script src="@Projectname/Scripts/jquery.validate.min.js"></script>
<script src="@Projectname/Scripts/jquery.validate.unobtrusive.min.js"></script>


<section class="payment-success-block section">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-md-6">
                <div class="mb-20">
                    <div class="bg">
                        <div class="card">
                            <span class="card__success">
                                <i class="fa fa-check" aria-hidden="true"></i>
                            </span>

                            <h1 class="card__msg">@Resource.GrowOnline_Common_PayComp</h1>
                            <h2 class="card__submsg">@Resource.GrowOnline_Message_PayComp</h2>

                            <div class="card__body">

                                @*<div class="card__recipient-info">
                                    <p class="card__recipient">Rahul Yadav</p>
                                    <p class="card__email">rahul.yadav@systematixindia.com</p>
                                </div>*@
                                <h3 class="card__price"><span><i class="fa fa-inr" aria-hidden="true"></i></span>@ViewBag.TotalPrice<span>.00</span></h3>


                                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="homePage()">@Resource.GrowOnline_Common_Backtohome</button>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
<script>
    function homePage() {
        window.location.href = '@Projectname';
    }
    </script>